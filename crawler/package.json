{
  "name": "grqaser-crawler",
  "version": "2.0.0",
  "description": "Robust web crawler for extracting audiobook data from grqaser.org",
  "main": "src/crawler.js",
  "scripts": {
    "start": "node src/crawler.js",
    "crawl": "node src/crawler.js",
    "dev": "NODE_ENV=development node src/crawler.js",
    "prod": "NODE_ENV=production node src/crawler.js",
    "test": "jest src/tests/",
    "test:watch": "jest src/tests/ --watch",
    "lint": "eslint src/",
    "clean": "rm -rf logs/* && rm -rf data/*.log"
  },
  "dependencies": {
    "puppeteer": "^21.3.8",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "eslint": "^8.0.0"
  },
  "keywords": [
    "crawler",
    "scraper",
    "audiobooks",
    "armenian",
    "grqaser",
    "puppeteer",
    "sqlite"
  ],
  "author": "Grqaser Team",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  }
}
